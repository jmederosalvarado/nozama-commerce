datasource db {
  provider = "sqlite"
  url      = "file:./nozama.db"
}

model Auction {
  id                 Int  @id @default(autoincrement())
  product            String
  productDescription String
  idSeller           String
  rating             Int
  image              String?
  closing            String
  currentPrice       Int
  idBidder           String?
  bids               Int @default(0)
}

model Offer {
  id                 Int  @id @default(autoincrement()) 
  product            String
  productDescription String
  idSeller           String
  price              Int
  rating             Int
  image              String?
}

model User {
  rating   Int?
  password String
  username String  @id
  image    String?
}

model BankAccount {
  number  Int @id
  balance Float
}
